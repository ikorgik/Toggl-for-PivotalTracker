{
  "name": "Toggl for PivotalTracker",
  "version": "1",
  "manifest_version": 2,
  "author": "SystemSeed LLC",
  "description": "Provides integration between Toggle time tracking tool and Pivotal Tracker.",
  "homepage_url": "https://github.com/spleshka/Toggl-for-PivotalTracker",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "http://www.pivotaltracker.com/*",
    "https://www.pivotaltracker.com/*"
  ],
  "browser_action": {
    "default_title": "Toggl for PivotalTracker",
    "default_icon": "icons/icon16.png"
  },
  "options_ui": {
    "page": "src/html/options/options.html",
    "chrome_style": true
  },
  // For compatibility with Chrome 40 or less.
  "options_page": "src/html/options/options.html",
  "content_scripts": [
    {
      "matches": [
        "http://www.pivotaltracker.com/*",
        "https://www.pivotaltracker.com/*",
        "http://www.toggl.com/*",
        "https://www.toggl.com/*"
      ],
      "js": [
        "src/libraries/jstoggl/toggl.js",
        "src/libraries/jquery/jquery-3.1.1.min.js",
        "src/main.js"
      ],
      "css": [
        "css/main.css"
      ]
    }
  ]
}
